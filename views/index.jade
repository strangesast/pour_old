extends layout

block head
  link(rel='stylesheet', href='/css/index.css')

block content
  #header
    h1 Pour
    p Welcome to Pour

    if (!user)
      a(href="/login") Login
      br
      a(href="/register") Register
    if (user)
      p You are currently logged in as #{user.username}
      a(href="/logout") Logout

  .box-container
    #summary-container
      h3 Status
      p= 'Current Temp: ' + summary.avg_temp
      p= 'OZ dispensed: ' + summary.total_dispensed
    #drinker-container
      if drinkers
        h3 Drinkers
        ul
        each drinker, index in drinkers
          li=drinker
      else
        p No drinkers

    #actions-container
      h3 Actions
      button Pour

block scripts
  script(src='/js/index.js')
