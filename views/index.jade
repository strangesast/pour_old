extends layout

block content
  h1 Pour
  p Welcome to Pour
  #summary-container
    h3 Summary
    p= 'Current Temp: ' + summary.avg_temp
    p= 'OZ dispensed: ' + summary.total_dispensed
  #drinker-container
    if drinkers
      h3 Drinkers
      ul
      each drinker, index in drinkers
        li=drinker
    else
      p No drinkers

  #actions-container
    h3 Actions
    button Pour
